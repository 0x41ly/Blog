@using Blog.ViewModels
@model Blog.Models.Comment
<style>
    body{background: #eee}
    .date{font-size: 11px}
    .comment-text{font-size: 12px}
    .fs-12{font-size: 12px}
    .shadow-none{box-shadow: none}
    .name{color: #007bff}
    .cursor:hover{color: blue}
    .cursor{cursor: pointer}
    .textarea{resize: none}
    #width{ width: 744px;}
    .commentsize{width: 459px;}
</style>


<div class="commentsize">
 <form asp-action="Comment" asp-controller="Home" method="post">
    <input asp-for="ArticleId" type="hidden" value="@Model.ArticleId"/>
    <input asp-for="ParentId" type="hidden" value="@Model.ParentId"/>
    
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div>
        <input asp-for="Message" type="text" placeholder="Type a comment......." class="Createcomment" />
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>
    <input type="submit" style="display:none"/>
</form>
</div>
